@model Batuhan.UI.Models.Dto.CarsDto
<html>
    <head>

    </head>
    <body>
        @if (ViewBag.Message != null && ViewBag.Message != "")
    {
        <h3 style="color:red;">@ViewBag.Message</h3>
    }
    <h3>Update Car</h3>
        <form asp-action="Update" asp-controller="Home" method="post">
            <input type="hidden" asp-for="@Model.Id"/>
            <label>Name</label>
            <input type="text" asp-for="@Model.Name" />
            <br />
            <label>Price</label>
            <input type="text" asp-for="@Model.Price" />
            <label>Hp</label>
            <input type="text" asp-for="@Model.Hp" />
            <label>Category Id</label>
            <input type="number" asp-for="CategoryId"/>
            <div>
                <a asp-action="Index" asp-controller="Home"></a>
                <button type="submit">Save</button>
            </div>
        </form>
    </body>
</html>
