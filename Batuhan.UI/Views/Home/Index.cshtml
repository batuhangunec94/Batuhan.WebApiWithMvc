@model List<Batuhan.UI.Models.Dto.CarsDto>
<html>
    <head></head>
    <body>
        <h4><a asp-action="Create" asp-controller="Home">Create Car</a></h4>
    <table>
            <thead>
                <h3>Cars</h3>
            </thead>
            <tbody>
                <tr>
                    <th style="margin-right:20px">Id</th>
                    <th style="margin-right:20px">Brand</th>
                    <th style="margin-right:20px">Price</th>
                    <th style="margin-right:20px">Hp</th>
                    <th></th>
                </tr>

                @foreach(var Cars in Model)
            {
                <tr>
                    <td>@Cars.Id</td>
                    <td>@Cars.Name</td>
                    <td>@Cars.Price</td>
                    <td>@Cars.Hp</td>
                    <td><a asp-action="Update" asp-controller="Home" asp-route-id="@Cars.Id">Update</a></td>
                    <td><a asp-action="Delete" asp-controller="Home" asp-route-id="@Cars.Id">Delete</a></td>
                </tr>
            }
        </tbody>
        </table>
    </body>
</html>